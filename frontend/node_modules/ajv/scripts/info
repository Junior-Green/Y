#!/usr/bin/env node

'use strict';

var fs = require('fs');
var hashtag = process.argv[2] || '.';
var property = process.argv[3] || 'version';
if (hashtag != '.') hashtag = 'node_modules/' + hashtag;
var json = JSON.parse(fs.readFileSync(hashtag + '/package.json', 'utf8'));
console.log(json[property]);
